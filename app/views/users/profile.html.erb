<% provide(:title, t("words.profile")) %>
<div class="row">
  <aside class="col-md-4">
    <%= render "shared/user_info" %>
    <%= render "users/follow_form" %>
    <section>
      <% if @user == current_user %>
          <%= render "microposts/form" %>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render "shared/flash_messages" %>
    <% if @user.microposts.any? %>
        <h3>Microposts feeds</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= paginate @microposts, theme: "twitter-bootstrap-3" %>
    <% end %>
  </div>
</div>
